<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <EditText
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="寻找博物馆..."
                android:textSize="22dp"
                android:paddingLeft="15dp"
                android:paddingright="15dp"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btn_icon1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@mipmap/icon4x"
                android:paddingLeft="0dp"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最近浏览"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80dp"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="20dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/mapc"
                    android:layout_width="315dp"
                    android:layout_height="130dp"
                    android:background="@drawable/videobutton3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="首都博物馆"
                        android:textSize="22dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="22dp"
                        android:layout_marginLeft="100dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon2x"
                        android:layout_marginLeft="270dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon5x"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="57dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北京"
                        android:textSize="20dp"
                        android:textColor="@color/gray2"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="52dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fighting.Zdl"
                        android:textColor="@color/gray2"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="85dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon6x"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"/>


                </FrameLayout>

                <FrameLayout
                    android:id="@+id/mapc"
                    android:layout_width="315dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/videobutton3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="首都博物馆"
                        android:textSize="22dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="22dp"
                        android:layout_marginLeft="100dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon2x"
                        android:layout_marginLeft="270dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon5x"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="57dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北京"
                        android:textSize="20dp"
                        android:textColor="@color/gray2"
                        android:layout_marginLeft="125dp"
                        android:layout_marginTop="52dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fighting.Zdl"
                        android:textColor="@color/gray2"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="85dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/icon6x"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"/>


                </FrameLayout>


            </LinearLayout>

        </HorizontalScrollView>

        <com.baidu.mapapi.map.MapView
            android:layout_width="370dp"
            android:layout_height="400dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="280dp"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
