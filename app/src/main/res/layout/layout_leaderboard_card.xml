<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/activity_leaderboard_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <cn.edu.buct.se.cs1808.RoundImageView
                android:id="@+id/activity_leaderboard_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/bleafumb_main_3"
                android:scaleType="centerCrop"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/activity_leaderboard_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="故宫博物院"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:gravity="center"/>
            <ImageButton
                android:id="@+id/activity_leaderboard_details"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="@drawable/bblk_details"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="150dp"
                />
            <ImageView
                android:layout_width="22dp"
                android:layout_height="25dp"
                android:adjustViewBounds="true"
                android:background="@drawable/common_fire"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/activity_leaderboard_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.9"
                android:textSize="23dp"
                android:textColor="@drawable/orange"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="35dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
