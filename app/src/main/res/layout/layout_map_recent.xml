<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:minHeight="100dp"
    android:paddingEnd="4dp"
    android:paddingBottom="4dp">

    <ImageView
        android:id="@+id/mapMuseumImage"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapMarkImage"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/mapMesumName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:maxWidth="175dp"
        android:maxLines="1"
        android:text="博物馆名称"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mapMuseumImage"
        app:layout_constraintTop_toBottomOf="@+id/mapMarkImage" />

    <ImageView
        android:id="@+id/mapPosImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toEndOf="@+id/mapMuseumImage"
        app:layout_constraintTop_toBottomOf="@+id/mapMesumName"
        app:srcCompat="@drawable/essay_map_card_pos" />

    <TextView
        android:id="@+id/mapPositionCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="北京"
        android:textColor="#AAAAAA"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/mapPosImage"
        app:layout_constraintTop_toBottomOf="@+id/mapMesumName" />

    <ImageView
        android:id="@+id/mapMarkImage"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/essay_mao_book_mark" />

    <TextView
        android:id="@+id/mapMesumInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapMuseumImage" />
</androidx.constraintlayout.widget.ConstraintLayout>
