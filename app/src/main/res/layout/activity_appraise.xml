<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的评价:"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <cn.edu.buct.se.cs1808.components.AppraiseScore
            android:id="@+id/appraise_activity_myscore"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            app:appraise_score_number="5"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="全部评价"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/appraise_activity_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginTop="15dp"
            android:textColor="@drawable/orange"
            android:text="发布评价"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true">
            <TextView
                android:id="@+id/appraise_activity_allappraise"
                android:layout_width="6dp"
                android:layout_height="19dp"
                android:gravity="center"
                android:background="@drawable/common_orange_background"
                android:text="全部"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/appraise_activity_goodappraise"
                android:layout_width="6dp"
                android:layout_height="19dp"
                android:gravity="center"
                android:text="好评"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/appraise_activity_midappraise"
                android:layout_width="6dp"
                android:layout_height="19dp"
                android:gravity="center"
                android:text="中评"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/appraise_activity_badappraise"
                android:layout_width="6dp"
                android:layout_height="19dp"
                android:gravity="center"
                android:text="差评"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/appraise_activity_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="666条"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/appraise_activity_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
    <TextView
        android:id="@+id/appraise_addmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看更多"
        android:textColor="@drawable/orange"
        android:paddingTop="5dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>
</LinearLayout>
