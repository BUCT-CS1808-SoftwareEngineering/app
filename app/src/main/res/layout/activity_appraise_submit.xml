<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/activity_museum_back"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/bblk_back_2"
            android:layout_alignTop="@+id/activity_museum_topimage"
            android:layout_alignLeft="@+id/activity_museum_topimage"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="点击评分"
            android:gravity="center" />
        <TextView
            android:layout_width="6dp"
            android:layout_height="19dp"
            android:gravity="center"
            android:background="@drawable/common_orange_background"
            android:text="全部"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:background="@drawable/shape_layout_underline">
        <cn.edu.buct.se.cs1808.components.AppraiseScore
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:appraise_score_number="0"
            app:appraise_score_click="true"
            android:gravity="center"/>
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="300dp"
        android:hint="评论不要超过150字"
        android:inputType="text"
        android:selectAllOnFocus="true"/>
</LinearLayout>
