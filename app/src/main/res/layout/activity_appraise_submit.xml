<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/activity_appraise_submit_back"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/bblk_back_2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="点击评分"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_appraise_submit_add"
            android:layout_width="60dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="21dp"
            android:background="@drawable/common_orange_background"
            android:gravity="center"
            android:text="发布"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:background="@drawable/shape_layout_underline_black">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="环境:"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="20dp"/>
            <cn.edu.buct.se.cs1808.components.AppraiseScore
                android:id="@+id/activity_appraise_submit_score_env"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:appraise_score_number="5"
                app:appraise_score_click="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="展览:"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="20dp"/>
            <cn.edu.buct.se.cs1808.components.AppraiseScore
                android:id="@+id/activity_appraise_submit_score_exh"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:appraise_score_number="5"
                app:appraise_score_click="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务:"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="20dp"/>
            <cn.edu.buct.se.cs1808.components.AppraiseScore
                android:id="@+id/activity_appraise_submit_score_sev"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:appraise_score_number="5"
                app:appraise_score_click="true" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/activity_appraise_submit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="400dp"
            android:hint="评论字数限制150字"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:selectAllOnFocus="true"
            android:lines="10"
            android:theme="@style/SubmitEditText"/>
    </RelativeLayout>

</LinearLayout>
