<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true">
        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="20dp">
            <cn.edu.buct.se.cs1808.RoundImageView
                android:id="@+id/search_card_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bleafumb_main_1"
                android:scaleType="centerCrop"
                app:image_radius="20"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">
            <TextView
                android:id="@+id/search_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:text="测试记录"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/search_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="博物馆"
                android:textSize="12dp"
                android:textColor="@drawable/orange"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/bleafumb_search_threepoint_black"/>
</RelativeLayout>
